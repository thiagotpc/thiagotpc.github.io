# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# HTML, LESS, SASS, CSS, JS, JSON
[{*.html,*.less,*.sass,*.css,*.js,*.json}]
indent_style = space
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[COMMIT_EDITMSG]
max_line_length = 0
